<form method="post" asp-action="Create">

    <div class="form-group">
        <label asp-for="Name">Nazwa Miejca</label>
        <input asp-for="Name" class="form-control" placeholder="OName">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Opis miejsca</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Image">Sciezka zdjecia</label>
        <input asp-for="Image" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Utworz Miejsce</button>
</form>